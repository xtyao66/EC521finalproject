{
  "manifest_version": 2,
  "name": "URL Secure",
  "version": "1.01",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "storage",
    "*://*/*"
  ],
  "web_accessible_resources": [
    "localHandler.html", "handler.js", "warning.html", "warning.js", "hello.html", "bootstrap.min.css", "cryptoHandler.html", "crypto.js"
  ],
  "author": {
    "email": "xwill@bu.edu"
  },
  "icons": {
    "16": "ic16.png",
    "32": "ic32.png",
    "48": "ic48.png",
    "64": "ic64.png",
    "128": "ic128.png"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  }
}
